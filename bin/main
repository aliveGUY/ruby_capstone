#!/usr/bin/env ruby
require_relative '../lib/item'
require_relative '../lib/app'
require_relative '../modules/menu/menu'

class Main
  include Menu
  def run # rubocop:disable Metrics/CyclomaticComplexity, Metrics/MethodLength
    app = App.new
    loop do
      main_menu
      input = gets.chomp

      case input
      when '1'
        app.list_books
      when '4'
        app.list_games
      when '6'
        app.list_label
      when '7'
        app.list_authors
      when '9'
        book_menu(app)
      when '12'
        game_menu(app)
      when '13'
        # @app.create_book
        break
      else
        puts 'please enter a valid option'
      end
    end
  end
end

Main.new.run

#!/usr/bin/env ruby
require_relative '../lib/item'
require_relative '../lib/app'
require_relative '../modules/menu/menu'

class Main
  include Menu
  def run
    app = App.new
    loop do
      main_menu
      input = gets.chomp
      case input
      when '4'
        app.list_games
      when '7'
        app.list_authors
      when '10'
        album_menu(app)
      when '12'
        game_menu(app)
      when '13'
        # @app.create_book
        break
      else
        puts 'please enter a valid option'
      end
    end
  end
end

Main.new.run
